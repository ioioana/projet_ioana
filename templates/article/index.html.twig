{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
    <h1>Liste des Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titreArticle }}</td>
                <td>{{ article.contenuArticle }}</td>
                <td><img src="{{ asset('build/images/')}}{{ article.photoArticle }}" alt=""></td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}" title="afficher"><button class="btn"><i class="fas fa-eye"></i></button></a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" title="editer"><button class="btn"><i class="fas fa-pencil-alt"></i></button></a>
                    <a href="{{ path('article_delete', {'id': article.id}) }}" title="supprimer">{{ include('article/_delete_form.html.twig') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Cr√©er un nouvel Article</a>
{% endblock %}
