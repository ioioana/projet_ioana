{% extends 'base.html.twig' %}

{% block title %}Barber place{% endblock %}
{% block stylesheets %}
    {{  parent() }}
{% endblock %}

    {% block body %}

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{asset('build/images/slider1.jpg')}}" alt="First slide" style="width: 20em; height:30em">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{asset('build/images/slider2.jpg')}}" alt="Second slide" style="width: 20em; height:30em">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="{{asset('build/images/slider3.jpg')}}" alt="Third slide" style="width: 20em; height:30em">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="articles">
            {% for article in articles %}
                <div>
                    <img src="{{ asset('build/images/')}}{{ article.photoArticle }}" alt="">
                    <h2>{{ article.titreArticle }}</h2>
                    <p>{{ article.contenuArticle | slice(0, 500) }}</p>
                    <a href="{{ path('article_lire', { id: article.id } ) }}" class="more">Voir plus <i class="fas fa-plus-circle"></i></a>
                </div>
            {% endfor %}
        </div>

        <h3 style="width: 60vw; padding:2vw; text-align:center; margin:auto">Uniquement chez nous, pour un look imp√©cable</h3>

        <div id="lecarousel">
            <carousel>
                {% for produit in produits %}
                <carousel-slide style="height: 50vh; width: 100vw; margin:auto">
                    <img src="{{asset('build/images/')}}{{ produit.photoProduit }}" alt="" class="w-100 h-100">
                </carousel-slide>
                {% endfor %}
            </carousel>
        </div>

    {% endblock body %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

