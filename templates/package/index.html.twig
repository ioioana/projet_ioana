{% extends 'base.html.twig' %}

{% block title %}Liste des Packages{% endblock %}

{% block body %}
    <h1>Liste des Packages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
{#        {{ dump(packages) }}#}
        {% for package in packages %}
{#            {{ dump(package) }}#}
            <tr>
                <td>{{ package.id }}</td>
                <td>{{ package.codePackage }}</td>
                <td>{{ package.prixPackage }} €</td>
                <td class="actions">
                    <a href="{{ path('package_show', {'id': package.id}) }}" title="afficher"><button class="btn"><i class="fas fa-eye"></i></button></a>
                    <a href="{{ path('package_edit', {'id': package.id}) }}" title="editer"><button class="btn"><i class="fas fa-pencil-alt"></i></button></a>
                    <a href="{{ path('package_delete', {'id': package.id}) }}" title="supprimer">{{ include('package/_delete_form.html.twig') }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('package_new') }}">Créer un nouveau Package</a>
{% endblock %}
